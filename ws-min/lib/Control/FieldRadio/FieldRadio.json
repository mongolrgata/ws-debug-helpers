{
   "name"   : "FieldRadio",
   "title"  : "Группа радио-кнопок",
   "version": "1.0",
   "spec"   : "1.0",
   "properties": {
      "ws-config":{
         "title":"Базовая конфигурация",
         "options":{
            "name": {
               "title": "Имя компонента",
               "type": "string"
            },
            "enable" : {
               "title" : "Разрешен ли элемент управления (возможно взаимодействие с ним)",
               "type" : "boolean",
               "default" : true
            },
            "allowChangeEnable" : {
               "title" : "Позволить менять состояние",
               "type" : "boolean",
               "default" : true
            },
            "hidden" : {
               "title" : "Скрыть компонент",
               "type" : "boolean",
               "default" : false
            },
            "tooltip" : {
               "title" : "Текст всплывающей подсказки",
               "default" : ""
            },
            "readonly": {
               "title": "только для чтения",
               "type": "boolean",
               "default": false
            },
            "wordWrap": {
               "title": "разрешить перенос текста меток",
               "type": "boolean",
               "default": false
            },
            "columnsCount": {
               "title": "количество колонок отображения",
               "type": "number",
               "default": 1
            },
            "data": {
               "title": "данные для отображения",
               "type": "object"
            },
            "display": {
               "title": "позиционирование",
               "type": ""
            },
            "align": {
               "title": "количество колонок отображения",
               "type": {
                  "center": "по центру",
                  "left": "слева",
                  "right": "справа"
               },
               "default": "center"
            },
            "cssClassName":{
               "title": "CSS-класс",
               "type": "string",
               "default": "ws-field-radio"
            }
         }
      },
      "ws-handlers": {
         "title": "Обработчики",
         "options": {
            "onInit": {
               "title": "после инициализации",
               "type": "handler"
            },
            "onDestroy": {
               "title": "при разрушении",
               "type": "handler"
            },
            "onReady": {
               "title": "при готовности",
               "type": "handler"
            },
            "onKeyPressed": {
               "title": "на нажатие клавиши",
               "editor": "handler"
            },
            "onChange": {
               "title": "при изменении значения",
               "editor": "handler"
            }
         }
      }
   }
}