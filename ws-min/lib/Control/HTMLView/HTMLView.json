{
   "name"   : "HTMLView",
   "title"  : "Представление HTML",
   "version": "1.0",
   "spec"   : "1.0",
   "properties": {
      "ws-config":{
         "title":"Базовая конфигурация",
         "options":{
            "name": {
               "title": "Имя компонента",
               "type": "string"
            },
            "enable" : {
               "title" : "Разрешен ли элемент управления (возможно взаимодействие с ним)",
               "type" : "boolean",
               "default" : true
            },
            "allowChangeEnable" : {
               "title" : "Позволить менять состояние",
               "type" : "boolean",
               "default" : true
            },
            "hidden" : {
               "title" : "Скрыть компонент",
               "type" : "boolean",
               "default" : false
            },
            "tooltip" : {
               "title" : "Текст всплывающей подсказки",
               "default" : ""
            },
            "docType":{
               "title": "тип документа",
               "type": {
                  "string": "content",
                  "url": "url",
                  "template": "шаблон"
               },
               "default": "string"
            },
            "string":{
               "title": "HTML-текст",
               "type": "string",
               "default": ""
            },
            "url":{
               "title": "url",
               "type": "string"
            },
            "template":{
               "title": "template",
               "type": "string"
            },
            "hidden":{
               "title": "скрытый",
               "type": "boolean",
               "default": false
            },
            "cssClassName":{
               "title": "CSS-класс",
               "type": "string",
               "default": ""
            }
         }
      },
      "ws-handlers": {
         "title": "Обработчики",
         "options": {
            "onInit": {
               "title": "после инициализации",
               "type": "handler"
            },
            "onDestroy": {
               "title": "при разрушении",
               "type": "handler"
            },
            "onReady": {
               "title": "при готовности",
               "type": "handler"
            },
            "onKeyPressed": {
               "title": "на нажатие клавиши",
               "editor": "handler"
            },
            "onContentSet": {
               "title": "при установке контента",
               "editor": "handler"
            },
            "onBeforePrint": {
               "title": "перед началом печати",
               "editor": "handler"
            }
         }
      }
   }
}