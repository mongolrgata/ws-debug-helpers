{
   "name"   : "Suggest",
   "title"  : "Автодополнение",
   "version": "1.0",
   "spec"   : "1.0",
   "properties": {
      "ws-config":{
         "title":"Базовая конфигурация",
         "options":{
            "name": {
               "title": "Имя компонента",
               "type": "string"
            },
            "enable" : {
               "title" : "Разрешен ли элемент управления (возможно взаимодействие с ним)",
               "type" : "boolean",
               "default" : true
            },
            "allowChangeEnable" : {
               "title" : "Позволить менять состояние",
               "type" : "boolean",
               "default" : true
            },
            "hidden" : {
               "title" : "Скрыть компонент",
               "type" : "boolean",
               "default" : false
            },
            "tooltip" : {
               "title" : "Текст всплывающей подсказки",
               "default" : ""
            },
            "rowsCount":{
               "title": "количество видимых строк для выбора",
               "type": "number",
               "default": 5
            },
            "filterParams":{
               "title": "дополнительные параметры фильтрации",
               "type": "object"
            },
            "filter":{
               "title": "поля выборки для фильтра",
               "type": "array"
            },
            "delay":{
               "title": "задержка при обработке пользовательского ввода",
               "type": "number",
               "default": 500
            },
            "startChar":{
               "title": "минимальная длина для поиска",
               "type": "number",
               "default": 3
            },
            "sourceField":{
               "title": "источники фильтров",
               "type": "array"
            },
            "resultField":{
               "title": "поля для подстановки результата",
               "type": "array"
            },
            "processField":{
               "title": "поля записи для подстановки результата",
               "type": "array"
            },
            "linkedBrowser":{
               "title": "связанный браузер",
               "type": "string"
            },
            "useBrowserFilter":{
               "title": "учитывать фильтр браузера",
               "type": "boolean",
               "default": false
            },
            "expandTree":{
               "title": "разворачивать дерево при поиске",
               "type": "boolean",
               "default": false
            },
            "autoShow":{
               "title": "показывать варианты при приходе фокуса",
               "type": "boolean",
               "default": false
            },
            "showAllTemplate":{
               "title": "диалог показа всех найденных вариантов",
               "type": "string"
            },
            "selectOnLoad":{
               "title": "выделять первую строку после загрузки",
               "type": "boolean",
               "default": true
            },
            "display": {
               "title": "отображение",
               "options": {
                  "columns": {
                     "title": "отображаемые колонки",
                     "type": "array"
                  },
                  "showHead": {
                     "title": "отображать заголовок",
                     "type": "boolean",
                     "default": true
                  },
                  "cutLongRows": {
                     "title": "обрезать длинные строки",
                     "type": "boolean",
                     "default": false
                  },
                  "rowRender": {
                     "title": "функция рендеринга строки",
                     "type": "string"
                  }
               }
            },
            "cssClassName":{
               "title": "CSS-класс",
               "type": "string",
               "default": ""
            }
         }
      },
      "ws-handlers": {
         "title": "Обработчики",
         "options": {
            "onInit": {
               "title": "после инициализации",
               "type": "handler"
            },
            "onDestroy": {
               "title": "при разрушении",
               "type": "handler"
            },
            "onReady": {
               "title": "при готовности",
               "type": "handler"
            },
            "onKeyPressed": {
               "title": "на нажатие клавиши",
               "editor": "handler"
            },
            "onDataLoaded": {
               "title": "после загрузки данных",
               "editor": "handler"
            },
            "onSuggest": {
               "title": "при выборе",
               "editor": "handler"
            },
            "onDataLoadStarted": {
               "title": "при начале загрузки данных",
               "editor": "handler"
            },
            "onMenuHide": {
               "title": "при скрытии меню",
               "editor": "handler"
            }
         }
      },
      "ws-data": {
         "title": "Источник данных",
         "options": {
            "filterParams": {
               "title": "параметры фильтрации",
               "type": "object"
            },
            "readerParams": {
               "title": "доступ к данным",
               "options": {
                  "linkedObject": {
                     "title": "имя базового объекта",
                     "type": "string"
                  },
                  "queryName": {
                     "title": "метод получения данных",
                     "type": "string"
                  }
               }
            }
         }
      }
   }
}