{
   "name"   : "Toolbar",
   "title"  : "Панель инструментов",
   "version": "1.0",
   "spec"   : "1.0",
   "properties": {
      "ws-config":{
         "title":"Базовая конфигурация",
         "options":{
            "name": {
               "title": "Имя компонента",
               "type": "string"
            },
            "enable" : {
               "title" : "Разрешен ли элемент управления (возможно взаимодействие с ним)",
               "type" : "boolean",
               "default" : true
            },
            "allowChangeEnable" : {
               "title" : "Позволить менять состояние",
               "type" : "boolean",
               "default" : true
            },
            "hidden" : {
               "title" : "Скрыть компонент",
               "type" : "boolean",
               "default" : false
            },
            "tooltip" : {
               "title" : "Текст всплывающей подсказки",
               "default" : ""
            },
            "btnCfg":{
               "title": "основные кнопки панели",
               "type": "array"
            },
            "subBtnCfg":{
               "title": "дополнительные кнопки панели",
               "type": "array"
            },
            "buttonsSide":{
               "title": "позиция кнопок",
               "type": {
                  "left": "слева",
                  "right": "справа"
               },
               "default": "left"
            },
            "position":{
               "title": "позиция панели",
               "type": {
                  "top": "сверху",
                  "bottom": "снизу",
                  "left": "слева",
                  "right": "справа"
               },
               "default": "top"
            },
            "cssClassName":{
               "title": "CSS-класс",
               "type": "string",
               "default": ""
            }
         }
      },
      "ws-handlers": {
         "title": "Обработчики",
         "options": {
            "onInit": {
               "title": "после инициализации",
               "type": "handler"
            },
            "onDestroy": {
               "title": "при разрушении",
               "type": "handler"
            },
            "onReady": {
               "title": "при готовности",
               "type": "handler"
            },
            "onKeyPressed": {
               "title": "на нажатие клавиши",
               "editor": "handler"
            },
            "onBeforeLoad": {
               "title": "перед загрузкой кнопок тулбара",
               "editor": "handler"
            },
            "onAfterLoad": {
               "title": "после загрузки кнопок тулбара",
               "editor": "handler"
            },
            "onActivate": {
               "title": "при переходе фокуса на панель",
               "editor": "handler"
            }
         }
      }
   }
}