{
   "name"   : "CustomView",
   "title"  : "Произвольное представление данных",
   "version": "1.0",
   "spec"   : "1.0",
   "properties": {
      "ws-config":{
         "title":"Базовая конфигурация",
         "options":{
            "name": {
               "title": "Имя компонента",
               "type": "string"
            },
            "enable" : {
               "title" : "Разрешен ли элемент управления (возможно взаимодействие с ним)",
               "type" : "boolean",
               "default" : true
            },
            "allowChangeEnable" : {
               "title" : "Позволить менять состояние",
               "type" : "boolean",
               "default" : true
            },
            "hidden" : {
               "title" : "Скрыть компонент",
               "type" : "boolean",
               "default" : false
            },
            "tooltip" : {
               "title" : "Текст всплывающей подсказки",
               "default" : ""
            },
            "cssClassName":{
               "title": "CSS-класс",
               "type": "string",
               "default": ""
            },
            "preprocessQuery" : {
               "title": "получать данные на стороне сервера",
               "type": "boolean",
               "default": false
            },
            "multiSelect": {
               "title": "множественный выбор",
               "type": "boolean",
               "default": true
            },
            "useSelection": {
               "title": "отображать выделение записей",
               "type": "boolean",
               "default": true
            },
            "allowAdd": {
               "title": "разрешено добавление",
               "type": "boolean",
               "default": true
            },
            "allowEdit": {
               "title": "разрешено редактирование",
               "type": "boolean",
               "default": true
            },
            "allowDelete": {
               "title": "разрешено удаление",
               "type": "boolean",
               "default": true
            },
            "allowMove": {
               "title": "разрешено перемещение",
               "type": "boolean",
               "default": true
            },
            "editMode": {
               "title": "режим редактирования",
               "type": {
                  "newDialog": "в новом диалоге",
                  "newWindow": "на новой странице",
                  "thisWIndow": "на той же странице"
               },
               "default": "newDialog"
            },
            "editDialogTemplate": {
               "title": "диалог редактирования записи",
               "type": "string"
            },
            "filterDialogTemplate": {
               "title": "диалог фильтрации",
               "type": "string"
            },
            "filterParams": {
               "title": "параметры фильтрации",
               "type": "object"
            },
            "setCursorOnLoad": {
               "title": "устанавливать курсор на первую запись после загрузки",
               "type": "boolean",
               "default": true
            },
            "mode": {
               "title": "режим управления",
               "type": {
                  "oneClickMode": "одним щелчком",
                  "doubleClickMode": "двойным щелчком"
               }
            },
            "useHoverRowAsActive": {
               "title": "использовать управления мышью",
               "type": "boolean",
               "default": false
            },
            "useCopyRecords": {
               "title": "использовать копирование записей",
               "type": "boolean",
               "default": false
            },
            "showHistory": {
               "title": "показывать историю изменения записей",
               "type": "boolean",
               "default": false
            },
            "useMergeRecords": {
               "title": "использовать объединение записей",
               "type": "boolean",
               "default": false
            },
            "useCurrentFilterOnMove": {
               "title": "использовать текущий фильтр для перемещения",
               "type": "boolean",
               "default": false
            },
            "printMode": {
               "title": "режим печати",
               "type": {
                  "newDialog": "в новом диалоге",
                  "newWindow": "в новой вкладке"
               }
            },
            "reports": {
               "title": "отчеты на печать для записи",
               "type": "object"
            },
            "reportsForList": {
               "title": "отчеты на печать для реестра",
               "type": "object"
            },
            "markedRowOptions": {
               "title": "операции для отмеченных записей",
               "type": "object"
            },
            "display": {
               "title": "Отображение",
               "options": {
                  "displayValue": {
                     "title": "Функция отображения записи",
                     "type": "string"
                  },
                  "readOnly": {
                     "title": "только для чтения",
                     "type": "boolean",
                     "default": false
                  },
                  "showRecordsCount": {
                     "title": "отображать количество записей",
                     "type": "boolean",
                     "default": true
                  },
                  "showPaging": {
                     "title": "отображать панель переключения между страницами",
                     "type": "boolean",
                     "default": true
                  },
                  "usePaging": {
                     "title": "использовать постраничную навигацию",
                     "type": {
                        "": "не использовать",
                        "full": "режим полной навигации",
                        "parts": "режим частичной навигации"
                     }
                  },
                  "recordsPerPage": {
                     "title": "количество записей на странице",
                     "type": "number",
                     "default": 20
                  },
                  "emptyHtml": {
                     "title": "текст при отсутствии записей для отображения",
                     "type": "string"
                  },
                  "emptyTableHtml": {
                     "title": "текст при отсутствии записей в таблице",
                     "type": "string"
                  },
                  "reload": {
                     "title": "перезагружать при добавлении/удалении записей",
                     "type": "boolean",
                     "default": true
                  },
                  "usePageSizeSelect": {
                     "title": "отображать выбор количества записей на странице",
                     "type": "boolean",
                     "default": true
                  },
                  "showToolbar": {
                     "title": "отображать панель инструментов",
                     "type": "boolean",
                     "default": false
                  },
                  "toolbarButtons": {
                     "title": "кнопки панели инструментов",
                     "type": "object"
                  }
               }
            }
         }
      },
      "ws-handlers": {
         "title": "Обработчики",
         "options": {
            "onInit": {
               "title": "после инициализации",
               "type": "handler"
            },
            "onDestroy": {
               "title": "при разрушении",
               "type": "handler"
            },
            "onReady": {
               "title": "при готовности",
               "type": "handler"
            },
            "onKeyPressed": {
               "title": "на нажатие клавиши",
               "editor": "handler"
            },
            "onBeforeLoad": {
               "title": "перед загрузкой данных",
               "editor": "handler"
            },
            "onRecordsChanged": {
               "title": "при изменении записей выборки",
               "editor": "handler"
            },
            "onBeforeRender": {
               "title": "перед отрисовкой",
               "editor": "handler"
            },
            "onAfterRender": {
               "title": "после отрисовки",
               "editor": "handler"
            },
            "onBeforeCreate": {
               "title": "перед созданием записи",
               "editor": "handler"
            },
            "onBeforeRead": {
               "title": "перед чтением записи",
               "editor": "handler"
            },
            "onBeforeInsert": {
               "title": "перед добавлением записи",
               "editor": "handler"
            },
            "onBeforeUpdate": {
               "title": "перед редактированием записи",
               "editor": "handler"
            },
            "onDeleteStart": {
               "title": "перед началом удаления",
               "editor": "handler"
            },
            "onBeforeDelete": {
               "title": "перед удалением записи",
               "editor": "handler"
            },
            "onBeforeCopy": {
               "title": "перед копированием записи",
               "editor": "handler"
            },
            "onRowActivated": {
               "title": "при активации записи",
               "editor": "handler"
            },
            "onRowClick": {
               "title": "при клике по записи",
               "editor": "handler"
            },
            "onRowDoubleClick": {
               "title": "при двойном клике по записи",
               "editor": "handler"
            },
            "onSetCursor": {
               "title": "при установке курсора на записи",
               "editor": "handler"
            },
            "onFilterChange": {
               "title": "при изменении фильтра",
               "editor": "handler"
            },
            "onChangeSelection": {
               "title": "при изменении набора отмеченных записей",
               "editor": "handler"
            },
            "onLoadError": {
               "title": "при ошибке загрузки данных",
               "editor": "handler"
            },
            "onSelectionConfirm": {
               "title": "при подтверждении выбора",
               "editor": "handler"
            },
            "onPrepareReportData": {
               "title": "при подготовке данных для печати",
               "editor": "handler"
            },
            "onSelectReportTransform": {
               "title": "при выборе xslt-преобразования",
               "editor": "handler"
            },
            "onBeforeShowPrintReports": {
               "title": "перед выводом списка отчетов",
               "editor": "handler"
            }
         }
      },
      "ws-data": {
         "title": "Источник данных",
         "options": {
            "filterParams": {
               "title": "параметры фильтрации",
               "type": "object"
            },
            "readerParams": {
               "title": "доступ к данным",
               "options": {
                  "linkedObject": {
                     "title": "имя базового объекта",
                     "type": "string"
                  },
                  "queryName": {
                     "title": "метод получения данных",
                     "type": "string"
                  },
                  "format": {
                     "title": "метод, определяющий формат объекта",
                     "type": "string"
                  },
                  "readMethodName": {
                     "title": "метод чтения",
                     "type": "string"
                  },
                  "updateMethodName": {
                     "title": "метод записи",
                     "type": "string"
                  },
                  "createMethodName": {
                     "title": "метод создания",
                     "type": "string"
                  },
                  "destroyMethodName": {
                     "title": "метод удаления",
                     "type": "string"
                  }
               }
            }
         }
      }
   }
}